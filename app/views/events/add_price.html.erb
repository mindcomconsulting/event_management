<%= form_for :price, :url=>{:controller=>'events',:action=>'create_price' } do |f| %>
  <table>
  	<tr>
  		<td>
    		<%="Function" %>&nbsp;&nbsp;&nbsp;&nbsp;
    		<%= f.select :function_id,options_for_select(@function),:prompt=>"Select",:onchange=>"" %><br/>
    	</td>
    </tr>
    <tr>
    	<td>
    		<%="Price/Per-Persion" %>
    		<%= f.text_field :price %>
    	</td>
    </tr>
    <tr>
      <td>
        <%="Description" %>
        <%= f.text_area :description %>
      </td>
    </tr>
    <tr>
    	<td>
    		<div class="mg-div-cls">
    			<%= f.submit 'Submit', :class => 'submit' %>
    			<%= link_to "cancel", {:controller=>'events',:action=>'price'}, :class => "submit cancel-btn" %>
    		</div>
    	</td>
  	</tr>
  </table>
<% end %>
 


