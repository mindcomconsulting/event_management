<%= form_for :price, :url=>{:controller=>'events',:action=>'create_price' }, :html => {:id => "createPriceFromID"} do |f| %>
  <table>
  	<tr>
  		<td>
    		<%="Function" %>&nbsp;&nbsp;&nbsp;&nbsp;<br/>
    		<%= f.select :function_id,options_for_select(@function),:prompt=>"Select",:onchange=>"" %><br/>
    	</td>
    </tr>
    <tr>
    	<td>
    		<%="Price/Per-Persion" %><br/>
    		<%= f.text_field :price %>
    	</td>
    </tr>
    <tr>
      <td>
        <%="Description" %><br/>
        <%= f.text_area :description %>
      </td>
    </tr>
    <tr>
    	<td>
    		<div class="mg-div-cls">
    			<%= f.submit 'Submit', :class => 'submit' %>
    			<%= link_to "cancel", {:controller=>'events',:action=>'price'}, :class => "submit cancel-btn" %>
    		</div>
    	</td>
  	</tr>
  </table>
<% end %>
 



<script>

  $(document).ready(function(){
    $("#createPriceFromID").validate({
      debug: true,
      rules: {
        "price[function_id]": {required: true},
        "price[price]": {required: true}
      }
    });
  });
</script>