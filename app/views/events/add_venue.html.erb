<%#= form_for :venue_detail, :url=>{:controller=>'events',:action=>'create_venue' } do |f| %>
<%= form_for :venue_detail, :url => {:controller=>'events',:action=>'create_venue' }, :html => {:id => "venueDetailsFromID"} do |f| %>

  <table>
    <tr>
    	<td>
    		<%="Name" %><br/>
    		<%= f.text_field :name %>
    	</td>
    </tr>
    <tr>
      <td>
        <%="Address" %><br/>
        <%= f.text_area :address %>
      </td>
    </tr>
    <tr>
    	<td>
    		<div class="mg-div-cls">
    			<%= f.submit 'Submit', :class => 'submit' %>
    			<%= link_to "cancel", {:controller=>'events',:action=>'venue'}, :class => "submit cancel-btn" %>
    		</div>
    	</td>
  	</tr>
  </table>
<% end %>
 


<script>

  $(document).ready(function(){
    $("#venueDetailsFromID").validate({
      debug: true,
      rules: {
        "venue_detail[name]": {required: true}
      }
    });
  });
</script>