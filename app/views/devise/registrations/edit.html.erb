<script>

  $(document).ready(function(){
    $("#updateProfileFromID").validate({
      debug: true,
      rules: {
        "user[user_name]": {required: true},
        "user[mobile_no]": {required: true,number: true},
        "user[first_name]": {required: true},
        "user[last_name]": {required: true},
        "user[address]": {required: true},
        "user[password]": {required: true, equalTo: "#user_password_confirmation"},
        "user[password_confirmation]": {required: true},
        "user[email]": {required: true, email: true}
      }
    });
  });
</script>

